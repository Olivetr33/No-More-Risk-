{
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "ignorePatterns": ["risker_read-it/vendor/**", "risker_read-it/libs/**"],
  "rules": {
    "indent": ["error", 4],
    "semi": ["error", "always"],
    "no-unused-vars": "off",
    "no-undef": "off",
    "no-useless-escape": "off",
    "no-prototype-builtins": "off"
  }
}
